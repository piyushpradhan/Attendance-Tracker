<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/notice_single_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:clipChildren="false"
    android:clipToPadding="false">

    <soup.neumorphism.NeumorphCardView
        android:id="@+id/single_notice_card"
        android:layout_marginHorizontal="5dp"
        app:cardElevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:neumorph_backgroundColor="@color/colorPrimary"
        app:neumorph_shadowColorLight="@color/shadowLight"
        app:neumorph_shadowColorDark="@color/shadowDark"
        app:neumorph_shapeAppearance="@style/CustomNeumorphCard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/single_notice_dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            app:civ_border="true"
            app:civ_border_width="1dp"
            android:src="@drawable/profile" />

        <TextView
            android:id="@+id/single_notice_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:text="Title of the Notice"
            android:textSize="22sp"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/single_notice_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="5dp"
            android:maxLines="1"
            android:textFontWeight="200"
            android:text="Desc of the Notice"
            android:textSize="13sp"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/single_notice_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="65dp"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="10dp"
            android:maxLines="2"
            android:textColor="#FFFFFF"
            android:text="Piyush Pradhan"
            android:textSize="8sp" />


    </soup.neumorphism.NeumorphCardView>

</androidx.constraintlayout.widget.ConstraintLayout>