<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary">


        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/comment_dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/profile"
            app:civ_border_width="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/comment_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="noobmaster"
            android:layout_marginStart="10dp"
            android:textFontWeight="500"
            android:layout_gravity="center_vertical"
            app:layout_constraintStart_toEndOf="@+id/comment_dp"
            app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:id="@+id/comment_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="350dp"
        android:text="here's the comment for the post, let's make this comment realyly really long to check stuff does this work"
        android:layout_marginStart="60dp"
        android:textFontWeight="200"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comment_author"/>

</androidx.constraintlayout.widget.ConstraintLayout>